<%= simple_form_for @building do |f| %>
  <%= f.input :address %>
  <%= f.input :city %>
  <%= f.input :state, collection: @states %>
  <%= f.input :postal_code %>
  <%= f.input :description %>
  <%= f.association :owner, label_method: :full_name %>
  <%= f.button :submit, "Register Building" %>
<% end %>

<%= link_to 'Buildings', buildings_path %>
